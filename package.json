{
    "name": "frontendj.ru",
    "version": "0.0.1",
    "homepage": "/",
    "private": true,
    "scripts": {
        "watch:sass": "npm run sass -- --watch",
        "watch:postcss": "postcss src/styles/index.css --use autoprefixer -d _site/styles --watch",
        "watch:eleventy": "eleventy --serve",
        "build": "npm run sass --no-source-map && eleventy && npm run postcss",
        "watch": "eleventy --watch",
        "serve": "eleventy --serve",
        "start": "npm-run-all --parallel watch:*",
        "debug": "DEBUG=* eleventy",
        "sass": "sass --style=compressed src/styles/index.scss src/styles/index.css",
        "postcss": "postcss src/styles/index.css --use autoprefixer --no-map -d _site/styles"
    },
    "license": "MIT",
    "devDependencies": {
        "@11ty/eleventy": "^0.12.1",
        "@11ty/eleventy-navigation": "^0.1.6",
        "@11ty/eleventy-plugin-rss": "^1.1.1",
        "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.0",
        "luxon": "^1.26.0",
        "markdown-it": "^12.0.4",
        "markdown-it-anchor": "^7.1.0",
        "npm-run-all": "^4.1.5"
    },
    "dependencies": {
        "autoprefixer": "^10.2.5",
        "eleventy-plugin-reading-time": "0.0.1",
        "html-minifier": "^4.0.0",
        "postcss": "^8.2.9",
        "postcss-cli": "^8.3.1",
        "sass": "^1.32.8"
    }
}
