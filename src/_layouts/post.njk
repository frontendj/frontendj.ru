---
layout: base.njk
---
<article class="post">
    <h1 class="post__title">{{ title }}</h1>

    <div class="post__info">
        {%- if not page.noDate %}
            <span class="visually-hidden">Published on</span>
            <time class="post__date" datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>
        {%- endif %}

        <div class="post__reading" aria-hidden="true">{{ content | readingTime({speed: 200}) }} to read</div>
    </div>

    <div class="post__content">
        {{ content | safe }}
    </div>

    {%- set nextPost = collections.posts | getNextCollectionItem(page) %}
    {%- set previousPost = collections.posts | getPreviousCollectionItem(page) %}
    {%- if nextPost or previousPost or tags %}
    <div class="post__footer">
        {%- if tags %}
        <div class="post__tags" aria-label="Post tags">
            {%- for tag in tags | filterTagList -%}
                {%- set tagUrl %}/tags/{{ tag | slug }}/{% endset -%}
                <a href="{{ tagUrl | url }}" class="post__tag link">
                    <span aria-label="Tag">#</span>{{ tag }}
                </a>
            {%- endfor %}
        </div>
        {%- endif %}

        <div class="post__navigation">
            <nav aria-label="Post navigation">
                <ul class="content-nav">
                    {%- if nextPost %}
                        <li class="content-nav__item content-nav__item--next">
                            <a class="content-nav__link link" href="{{ nextPost.url | url }}" aria-label="Next post — {{ nextPost.data.title }}">
                                {{ nextPost.data.title }}
                            </a>
                        </li>
                    {% endif %}

                    {%- if previousPost %}
                        <li class="content-nav__item content-nav__item--prev">
                            <a class="content-nav__link link" href="{{ previousPost.url | url }}" aria-label="Previous post — {{ previousPost.data.title }}">
                                {{ previousPost.data.title }}
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </nav>
        </div>
    </div>
    {%- endif %}
</article>


